{{!
    @template unilabeltype_accordion/accordion
    Template to show collapsable elements as an accordion.

    Example context (json):
    {
        "showintro": false,
        "intro": "",
        "segments": [
            {
                "id": "4",
                "accordionid": "1",
                "heading": "Heading-1",
                "content": "Content-1"
            },
            {
                "id": "5",
                "accordionid": "1",
                "heading": "Heading-2",
                "content": "Content-2"
            },
            {
                "id": "6",
                "accordionid": "1",
                "heading": "Heading-3",
                "content": "Content-3"
            }
        ],
        "cmid": "3",
        "plugin": "unilabeltype_accordion",
        "collapse": false
    }
}}

{{#showintro}}
    {{{intro}}}
{{/showintro}}
<div class="accordion" id="accordion-{{cmid}}">
{{#segments}}
    <div class="card" id="accordion-{{cmid}}-{{id}}">
        <div class="card-header" id="accordion-heading-{{cmid}}-{{id}}">
            <button id="unilabel-button-{{cmid}}-{{id}}" class="btn btn-link btn-block collapsed" type="button" data-toggle="collapse" data-target="#accordion-segment-{{cmid}}-{{id}}" aria-expanded="false" aria-controls="accordion-segment-{{cmid}}-{{id}}">
                {{{ heading }}}
            </button>
        </div>
        <div id="accordion-segment-{{cmid}}-{{id}}" class="collapse" aria-labelledby="accordion-heading-{{cmid}}-{{id}}" {{^collapse}}data-parent="#accordion-{{cmid}}"{{/collapse}}>
            <div class="card-body">
                {{{ content }}}
            </div>
        </div>
    </div>
{{/segments}}
</div>
{{#js}}
    $("#accordion-{{cmid}} .card .card-header button").click(function(event) {
        event.stopPropagation(); // Since Moodle 4.0 the course topics are collapsable too and should not be triggered.
        event.preventDefault();
        $($(this).data('target')).collapse("toggle");
    });
{{/js}}
